{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Film list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(entities, 'Id', 'f.id') }}</th>
                <th>{{ knp_pagination_sortable(entities, 'Title', 'f.title') }}</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('film_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('film_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('film_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>
        <ul>
        <li>
            <a href="{{ path('film_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
